<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.lsy.lsynote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    
      <!-- 声明网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar"
        >
        <activity
            android:name="cn.lsy.lsynote.ui.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cn.lsy.lsynote.ui.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.lsy.lsynote.ui.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        	<activity
            android:name="cn.lsy.lsynote.ui.RegisterActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
